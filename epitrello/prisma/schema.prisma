datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

model User {
  id               String    @id @default(uuid())
  email            String    @unique
  password         String
  name             String?
  profileImage     String?
  emailVerified    DateTime?
  pendingEmail     String?
  verificationCode String?
  resetToken       String?
  resetTokenExpiry DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  githubId          String? @unique
  githubAccessToken String?
  githubUsername    String?
  githubAvatarUrl   String?

  workspaces           Workspace[]
  workspaceMemberships WorkspaceMember[]

  boards           Board[]
  boardMemberships BoardMember[]

  assignedCards CardMember[]
  comments      Comment[]
  activities    Activity[]
  attachments   Attachment[]
}

model Workspace {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  members WorkspaceMember[]

  boards Board[]
}

model WorkspaceMember {
  id          String    @id @default(cuid())
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  role        Role      @default(VIEWER)
  joinedAt    DateTime  @default(now())

  @@unique([workspaceId, userId])
}

model Board {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime @default(now())

  githubRepo   String?
  githubBranch String?

  lists      List[]
  labels     Label[]
  activities Activity[]

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  members         BoardMember[]
  automationRules AutomationRule[]

  background String?
}

model BoardMember {
  id       String   @id @default(cuid())
  boardId  String
  board    Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  userId   String
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role     Role     @default(VIEWER)
  joinedAt DateTime @default(now())

  @@unique([boardId, userId])
}

model Invitation {
  id    String @id @default(cuid())
  email String
  token String @unique
  role  Role   @default(VIEWER)

  workspaceId String?

  boardId String?

  inviterId String

  status    String   @default("PENDING") // PENDING, ACCEPTED
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([token])
}

model List {
  id        String   @id @default(cuid())
  title     String
  position  Int
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  cards Card[]
}

model Card {
  id         String    @id @default(cuid())
  title      String
  content    String?
  position   Int
  listId     String
  list       List      @relation(fields: [listId], references: [id], onDelete: Cascade)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  archived   Boolean   @default(false)
  coverImage String?
  startDate  DateTime?
  dueDate    DateTime?
  isDone     Boolean   @default(false)

  githubIssueNumber Int?
  githubIssueUrl    String?

  labels      CardLabel[]
  members     CardMember[]
  comments    Comment[]
  activities  Activity[]
  checklists  Checklist[]
  attachments Attachment[]
}

model Label {
  id        String   @id @default(cuid())
  name      String
  color     String
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  cards CardLabel[]

  @@unique([boardId, name])
}

model CardLabel {
  id      String @id @default(cuid())
  cardId  String
  card    Card   @relation(fields: [cardId], references: [id], onDelete: Cascade)
  labelId String
  label   Label  @relation(fields: [labelId], references: [id], onDelete: Cascade)

  @@unique([cardId, labelId])
}

model CardMember {
  id     String @id @default(cuid())
  cardId String
  card   Card   @relation(fields: [cardId], references: [id], onDelete: Cascade)
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([cardId, userId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  cardId    String
  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Attachment {
  id        String   @id @default(cuid())
  name      String
  url       String
  type      String
  size      Int
  cardId    String
  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Activity {
  id          String   @id @default(cuid())
  type        String
  description String
  cardId      String?
  card        Card?    @relation(fields: [cardId], references: [id], onDelete: Cascade)
  boardId     String
  board       Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  metadata    String?
  createdAt   DateTime @default(now())
}

model Checklist {
  id        String   @id @default(cuid())
  title     String
  position  Int
  cardId    String
  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items ChecklistItem[]
}

model ChecklistItem {
  id          String    @id @default(cuid())
  text        String
  checked     Boolean   @default(false)
  position    Int
  checklistId String
  checklist   Checklist @relation(fields: [checklistId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model AutomationRule {
  id          String   @id @default(cuid())
  boardId     String
  board       Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  triggerType String // e.g., "CARD_MOVED_TO_LIST"
  triggerVal  String // e.g., "Done List ID"
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  actions AutomationAction[]
  logs    AutomationLog[]
}

model AutomationAction {
  id        String         @id @default(cuid())
  ruleId    String
  rule      AutomationRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  type      String // e.g., "ARCHIVE_CARD"
  value     String? // e.g. Label ID
  createdAt DateTime       @default(now())
}

model AutomationLog {
  id        String         @id @default(cuid())
  ruleId    String
  rule      AutomationRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  status    String // "SUCCESS", "FAILURE"
  message   String?
  createdAt DateTime       @default(now())
}
